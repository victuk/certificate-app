    <script>
        function checkCert () {
            const certID = document.getElementById('certificate-id');
            const certreply = document.getElementById('certreply');
            
            if (certID.value == '') {
                alert("Please input a specific ID")
            } else {
                fetch('/users/getuser/singleuser?user=' + certID.value, {
                    method: "GET",
                }).then(data =>{
                    return data.json();
                }).then(user => {
                    certreply.innerText = '';
                    certreply.innerHTML = `
                    <div id="user-detail">${user.last_name}, ${user.first_name} ${user.other_names}</div>
                    <div id="user-id">Certificate ID: ${user._id}</div>
                    <img src='../static/images/cert.png' style="height: auto; width: 100%;">`;
                })
            }
        }
    </script>
